  "principles": {
    "designStyle": [
      "Friendly, health/fitness UI: soft surfaces, rounded shapes, generous whitespace",
      "High-contrast primary actions (bold blue pills) against clean white backgrounds",
      "Information density kept low; hierarchy relies on typography + spacing more than borders",
      "Use gradients sparingly for hero/summary surfaces; keep most UI neutral"
    ],
    "layoutAndStructure": [
      "Top navigation minimal; content organized into stacked cards",
      "Hero card first (goal/summary), followed by list cards (exercises/items)",
      "Primary action anchored: either large CTA in hero or bottom-aligned action row",
      "Use chips/badges for small metadata (duration, reps, status)"
    ],
    "spacingGuidelines": [
      "8px rhythm: 0.5rem (8px) baseline; 0.25rem (4px) for tight chip gaps",
      "Card padding typically 1rem–1.25rem; internal row gaps 0.75rem–1rem",
      "Between cards: 1rem–1.25rem; section separation: 1.5rem–2rem"
    ],
    "colorGuidelines": [
      "Primary blue reserved for CTAs, key icons, links, focus, and progress indicators",
      "Use teal/mint for positive surfaces/status and calm gradient backgrounds",
      "Use orange for attention/progress accent; green for completion; keep red rare",
      "Neutrals dominate surfaces; borders are subtle (often replaced by shadow + radius)"
    ],
    "interactionGuidelines": [
      "Tap targets >= 2.75rem height for primary controls; chips >= 1.75rem height",
      "Primary buttons are pill-shaped; secondary actions are outline pills",
      "Focus ring uses primary with low-alpha; active state slightly darkens + compresses"
    ],
    "accessibility": [
      "Text on primary uses near-white; ensure contrast >= 4.5:1 for body text",
      "Avoid using only color for status; pair with label (e.g., Done) and/or icon",
      "Prefer neutral backgrounds for long-form admin tables; use brand accents for actions"
    ]
  },
